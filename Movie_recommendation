      "source": [
        "# Convert text to vectors\n",
        "tfidf = TfidfVectorizer(stop_words='english')\n",
        "tfidf_matrix = tfidf.fit_transform(movies['combined'])\n",
        "\n",
        "# Compute similarity matrix\n",
        "cosine_sim = cosine_similarity(tfidf_matrix, tfidf_matrix)\n",
        "\n",
        "# Create a mapping of movie titles to their index\n",
        "indices = pd.Series(movies.index, index=movies['title']).drop_duplicates()\n"
      ],
      "metadata": {
        "id": "nXdgdo_EjEUV"
      },
      "execution_count": 18,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "def recommend(title, cosine_sim=cosine_sim):\n",
        "    if title not in indices:\n",
        "        return \"❌ Movie not found. Please check the title.\"\n",
        "\n",
        "    idx = indices[title]\n",
        "    sim_scores = list(enumerate(cosine_sim[idx]))\n",
        "    sim_scores = sorted(sim_scores, key=lambda x: x[1], reverse=True)[1:11]\n",
        "    movie_indices = [i[0] for i in sim_scores]\n",
        "    return movies['title'].iloc[movie_indices].tolist()\n"
      ],
      "metadata": {
        "id": "EgWqyxchjKiu"
      },
      "execution_count": 19,
      "outputs": []
    },
